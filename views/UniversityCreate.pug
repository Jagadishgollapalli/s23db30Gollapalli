extends layout 
 
block content 
  h1= title 
 
  form(id='universityForm', action="/resource/University", method="POST") 
    div.form-group 
        label.uniAttr(for='University_name') University_name 
        input#University_name(type='text', name='University_name') 
    div.form-group 
        label.uniAttr(for='City') City  
        input#City(type='text', name='City') 
    div.form-group 
        label.uniAttr(for='Students') Students  
        input#Students(type='number', name='Students') 
    input(type="submit") 
 
  script. 
    document.forms['universityForm'].addEventListener('submit', (event) => { 
      event.preventDefault(); 
      // TODO do something here to show user that form is being submitted 
      fetch(event.target.action, { 
        method: 'POST', 
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Save succeded") 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Save failed " + error ) 
      }); 
    });